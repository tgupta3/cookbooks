{
	"builders": [
		{
			"type": "proxmox-iso",
			"proxmox_url": "https://{{user `proxmox_host`}}/api2/json",
			"insecure_skip_tls_verify": true,
			"username": "{{user `proxmox_api_user`}}",
			"password": "{{user `proxmox_api_password`}}",

			"vm_name": "{{user `template_name`}}",
			"vm_id": "{{ user `vmid` }}",
			"node": "{{user `proxmox_node_name`}}",
			"cores": "{{ user `cores` }}",
			"sockets": "{{ user `sockets` }}",
			"memory": "{{ user `memory` }}",
			"os": "l26",
			"network_adapters": [
				{
					"model": "virtio",
					"bridge": "vmbr0",
					"mac_address": "00:50:56:00:00:01"
				}
			],
			"disks": [
				{
					"type": "scsi",
					"disk_size": "{{ user `disk_size`}}",
					"storage_pool": "{{user `datastore`}}",
					"format": "raw",
					"cache_mode": "none"
				}
			],

			"ssh_timeout": "20m",
			"ssh_password": "{{ user `ssh_password` }}",
			"ssh_username": "{{ user `ssh_username` }}",

			"qemu_agent": true,
			"unmount_iso": true,

			"iso_file": "{{user `iso`}}",
			"http_directory": "./http",
			"http_port_min": "9999",
			"http_port_max": "9999",
			"template_description": "{{ user `template_description` }}",

			"boot_wait": "10s",
			"boot_command": [
				"c",
				"linux /casper/vmlinuz -- autoinstall ds='nocloud-net;s=http://{{ .HTTPIP }}:{{ .HTTPPort }}/'",
				"<enter><wait><wait>", "initrd /casper/initrd",
				"<enter><wait><wait>", "boot<enter>"
			]
		}
	],
	"provisioners": [
		{
			"pause_before": "20s",
			"type": "shell",
			"environment_vars": ["DEBIAN_FRONTEND=noninteractive"],
			"inline": [
				"while [ ! -f /var/lib/cloud/instance/boot-finished ]; do echo 'Waiting for cloud-init...'; sleep 1; done",
				"sudo rm -f /etc/cloud/cloud.cfg.d/99-installer.cfg",
				"sudo cloud-init clean"
			]
		},
		{
			"pause_before": "20s",
			"type": "shell",
			"environment_vars": ["DEBIAN_FRONTEND=noninteractive"],
			"inline": [
				"sudo apt-get install -y ca-certificates curl gnupg lsb-release",
				"curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo gpg --dearmor -o /usr/share/keyrings/docker-archive-keyring.gpg",
            	"echo \"deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/docker-archive-keyring.gpg] https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable\" | sudo tee /etc/apt/sources.list.d/docker.list > /dev/null",
            	"sudo apt-get -y update",
            	"sudo apt-get install -y docker-ce docker-ce-cli"
			]
		},
		{
			"pause_before": "20s",
			"type": "shell",
			"environment_vars": ["DEBIAN_FRONTEND=noninteractive"],
			"inline": [
				"echo Cleanup user",
				"sudo userdel -r --force {{ user `ssh_username` }}"
			]
		}
	]
}