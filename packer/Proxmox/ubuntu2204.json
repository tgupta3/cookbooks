{
	"builders": [
		{
			"type": "proxmox-iso",
			"proxmox_url": "https://{{user `proxmox_host`}}/api2/json",
			"insecure_skip_tls_verify": true,
			"username": "{{user `proxmox_api_user`}}",
			"password": "{{user `proxmox_api_password`}}",

			"vm_name": "{{user `template_name`}}",
			"vm_id": "{{ user `vmid` }}",
			"node": "{{user `proxmox_node_name`}}",
			"cores": "{{ user `cores` }}",
			"sockets": "{{ user `sockets` }}",
			"memory": "{{ user `memory` }}",
			"os": "l26",
			"network_adapters": [
				{
					"model": "virtio",
					"bridge": "vmbr0"
				},
                {
					"model": "virtio",
					"bridge": "vmbr0",
                    "vlan_tag": "100"
				}
			],
			"disks": [
				{
					"type": "scsi",
					"disk_size": "{{ user `disk_size`}}",
					"storage_pool": "{{user `datastore`}}",
					"format": "raw",
					"cache_mode": "writeback"
				}
			],

			"ssh_timeout": "10m",
			"ssh_password": "{{ user `ssh_password` }}",
			"ssh_username": "{{ user `ssh_username` }}",

			"qemu_agent": true,
			"unmount_iso": true,

			"iso_file": "{{user `iso`}}",
			"http_directory": "./http",
			"http_port_min": "9999",
			"http_port_max": "9999",
			"template_description": "{{ user `template_description` }}",

			"boot_wait": "10s",
			"boot_command": [
				"c",
				"linux /casper/vmlinuz -- autoinstall ds='nocloud-net;s=http://192.168.0.57:{{ .HTTPPort }}/'",
				"<enter><wait><wait>", "initrd /casper/initrd",
				"<enter><wait><wait>", "boot<enter>"
			]
		}
	],
	"provisioners": [
		{
			"pause_before": "20s",
			"type": "shell",
			"environment_vars": ["DEBIAN_FRONTEND=noninteractive"],
			"inline": [
				"while [ ! -f /var/lib/cloud/instance/boot-finished ]; do echo 'Waiting for cloud-init...'; sleep 1; done",
				"sudo rm -f /etc/cloud/cloud.cfg.d/99-installer.cfg",
				"sudo cloud-init clean",
				"sudo apt-get -y dist-upgrade",
				"sudo passwd -d ubuntu"
			]
		}
	]
}